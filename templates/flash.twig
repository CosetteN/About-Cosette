{% if flash is not empty %}
	{% for key, msg in flash %}
	<div id="feedback" class="{{ key }}">
		<a class="dismiss">Dismiss</a>
		<h3>{{ key }}</h3>
		<p>{{ msg }}</p>
	</div>
	{% endfor %}
{% endif %}

<?php
/*
* div & class in message allow css styling
* key is first entry in to each flash message
* msg is the second entry into each
* dismiss allows user to remove the flash message when desired.
*/
?>